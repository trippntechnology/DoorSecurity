<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:state_enabled="false">
        <shape>
            <solid
                android:color="@color/md_grey_800"/>
            <corners
                android:radius="2dp"/>
        </shape>
    </item>
    <item
        android:state_pressed="true"
        android:state_enabled="true">
        <shape>
            <solid
                android:color="@color/md_green_800"/>
            <corners
                android:radius="2dp"/>
        </shape>

    </item>
    <item
        android:state_focused="true"
        android:state_enabled="true">
        <shape>
            <solid
                android:color="@color/md_green_900"/>
            <corners
                android:radius="2dp"/>
        </shape>

    </item>
    <item
        android:state_enabled="true">
        <shape>
            <solid
                android:color="@color/md_green_600"/>
            <corners
                android:radius="2dp"/>
        </shape>
    </item>

</selector>