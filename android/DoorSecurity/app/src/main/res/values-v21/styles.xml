<resources>

    <style name="AppTheme" parent="android:Theme.Material.Light">
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/whiteText</item>
        <item name="android:textColorHint">@color/textHint</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/dark</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="android:editTextStyle">@style/edit_text</item>
        <item name="android:buttonStyle">@style/tnt_button_v21</item>
        <item name="android:scrollViewStyle">@style/tnt_scrollView_v21</item>
    </style>

    <style name="edit_text" parent="android:Widget.Material.EditText">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="tnt_button_v21" parent="android:Widget.Material.Button">
        <item name="android:background">@drawable/tnt_button_v20</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:textColor">@color/whiteText</item>
    </style>

    <style name="tnt_scrollView_v21" parent="android:Widget.Material.ScrollView">
        <item name="android:overScrollFooter">@color/extraDark</item>
        <item name="android:overScrollHeader">@color/extraDark</item>
    </style>

</resources>